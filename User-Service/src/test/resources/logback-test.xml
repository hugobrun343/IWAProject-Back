<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for tests -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger for tests -->
    <root level="WARN">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Application logger -->
    <logger name="com.iwaproject" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- Disable Kafka logging -->
    <logger name="org.apache.kafka" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- Disable Spring Boot startup logging -->
    <logger name="org.springframework.boot" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
</configuration>

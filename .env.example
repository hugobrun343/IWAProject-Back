# ==========================================
# KEYCLOAK CONFIGURATION (LOCAL)
# ==========================================
KEYCLOAK_SERVER_URL=http://host.docker.internal:8080
KEYCLOAK_REALM=master
KEYCLOAK_CLIENT_ID=iwa-client
KEYCLOAK_CLIENT_SECRET=your-client-secret-here
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin123

# ==========================================
# KAFKA CONFIGURATION (LOCAL)
# ==========================================
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_LOGS_TOPIC=microservices-logs

# ==========================================
# LOG SERVICE KAFKA CONFIGURATION
# ==========================================
KAFKA_CONSUMER_GROUP_ID=log-service-consumer
KAFKA_CONSUMER_AUTO_OFFSET_RESET=earliest

# ==========================================
# USER SERVICE KAFKA CONFIGURATION
# ==========================================
KAFKA_USER_CONSUMER_GROUP_ID=user-group
KAFKA_USER_LISTENER_CONCURRENCY=3
KAFKA_USER_CONSUMER_AUTO_OFFSET_RESET=earliest

# ==========================================
# ELASTICSEARCH CONFIGURATION (LOCAL)
# ==========================================
ELASTICSEARCH_URIS=http://elasticsearch:9200
ELASTICSEARCH_CONNECTION_TIMEOUT=5s
ELASTICSEARCH_SOCKET_TIMEOUT=30s

# ==========================================
# GATEWAY SECURITY
# ==========================================
GATEWAY_SECRET=your-gateway-secret-here

# ==========================================
# SERVICE PORTS
# ==========================================
USER_SERVICE_PORT=8081
ANNOUNCEMENT_SERVICE_PORT=8082
APPLICATION_SERVICE_PORT=8083
CHAT_SERVICE_PORT=8084
FAVORITE_SERVICE_PORT=8086
LOG_SERVICE_PORT=8087
PAYMENT_SERVICE_PORT=8088
RATING_SERVICE_PORT=8089
GATEWAY_SERVICE_PORT=8085

# ==========================================
# SERVICES URLs (for Gateway routing)
# ==========================================
USER_SERVICE_URL=http://user-service:${USER_SERVICE_PORT}
ANNOUNCEMENT_SERVICE_URL=http://announcement-service:${ANNOUNCEMENT_SERVICE_PORT}
APPLICATION_SERVICE_URL=http://application-service:${APPLICATION_SERVICE_PORT}
CHAT_SERVICE_URL=http://chat-service:${CHAT_SERVICE_PORT}
FAVORITE_SERVICE_URL=http://favorite-service:${FAVORITE_SERVICE_PORT}
LOG_SERVICE_URL=http://log-service:${LOG_SERVICE_PORT}
PAYMENT_SERVICE_URL=http://payment-service:${PAYMENT_SERVICE_PORT}
RATING_SERVICE_URL=http://rating-service:${RATING_SERVICE_PORT}

# ==========================================
# CORS CONFIGURATION (comma-separated origins)
# ==========================================
CORS_FRONTEND_ORIGINS=http://localhost:3000
CORS_GATEWAY_ORIGINS=http://gateway-service:${GATEWAY_SERVICE_PORT}

# ==========================================
# JWT VALIDATION (DEV ONLY - DISABLE IN PROD!)
# ==========================================
JWT_SKIP_ISSUER_VALIDATION=true

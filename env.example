# Keycloak Configuration
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=iwa-realm
KEYCLOAK_CLIENT_ID=iwa-client
KEYCLOAK_CLIENT_SECRET=your-client-secret-here
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin123

# JWT Configuration
JWT_SKIP_ISSUER_VALIDATION=true

# Gateway Configuration
GATEWAY_SECRET=your-gateway-secret-here

# Service URLs
USER_SERVICE_URL=http://user-service:8081
ANNOUNCEMENT_SERVICE_URL=http://announcement-service:8082
APPLICATION_SERVICE_URL=http://application-service:8083
CHAT_SERVICE_URL=http://chat-service:8084
FAVORITE_SERVICE_URL=http://favorite-service:8086
LOG_SERVICE_URL=http://log-service:8087
PAYMENT_SERVICE_URL=http://payment-service:8088
RATING_SERVICE_URL=http://rating-service:8089

# CORS Configuration
CORS_FRONTEND_ORIGINS=http://localhost:3000,http://localhost:19006
CORS_GATEWAY_ORIGINS=http://gateway-service:8085

# Kafka Configuration
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_USER_CONSUMER_GROUP_ID=user-service-group
KAFKA_USER_LISTENER_CONCURRENCY=1
KAFKA_USER_CONSUMER_AUTO_OFFSET_RESET=earliest
KAFKA_CONSUMER_GROUP_ID=log-service-group
KAFKA_CONSUMER_AUTO_OFFSET_RESET=earliest
KAFKA_LOGS_TOPIC=microservices-logs

# Elasticsearch Configuration
ELASTICSEARCH_URIS=http://elasticsearch:9200
ELASTICSEARCH_CONNECTION_TIMEOUT=5s
ELASTICSEARCH_SOCKET_TIMEOUT=30s

# Server Ports
SERVER_PORT=8081
